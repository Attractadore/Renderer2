{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "toolchainFile": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "VCPKG_TARGET_TRIPLET": "$env{VCPKG_DEFAULT_TRIPLET}",
        "VCPKG_MANIFEST_FEATURES": "$env{VCPKG_PROFILE_MANIFEST_FEATURES};$env{VCPKG_PLATFORM_MANIFEST_FEATURES}"
      }
    },
    {
      "name": "base-devel",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "REN_BUILD_EXAMPLES": "ON",
        "REN_LOG_SEVERITY": "ERROR;WARN;INFO;DEBUG",
        "REN_VULKAN_VALIDATION": "ON"
      },
      "environment": {
        "VCPKG_PROFILE_MANIFEST_FEATURES": "examples"
      }
    },
    {
      "name": "base-release",
      "hidden": true,
      "inherits": "base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "environment": {
        "VCPKG_PROFILE_MANIFEST_FEATURES": "dummy"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-linux-release",
        "VCPKG_PLATFORM_MANIFEST_FEATURES": "vulkan"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-mingw",
      "hidden": true,
      "cacheVariables": {
        "VCPKG_CHAINLOAD_TOOLCHAIN_FILE": "/usr/share/mingw/toolchain-x86_64-w64-mingw32.cmake"
      },
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-mingw-static",
        "VCPKG_PLATFORM_MANIFEST_FEATURES": "vulkan;directx12"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "environment": {
        "VCPKG_DEFAULT_TRIPLET": "x64-windows-static-md",
        "VCPKG_PLATFORM_MANIFEST_FEATURES": "vulkan;directx12"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-devel",
      "displayName": "Development Config for Linux",
      "description": "Development build with debug info, assertions and validation",
      "inherits": [
        "linux",
        "base-devel"
      ],
      "environment": {
        "VCPKG_PROFILE_MANIFEST_FEATURES": "examples;examples-vulkan"
      }
    },
    {
      "name": "linux-mingw-devel",
      "displayName": "Development Config for MinGW on Linux",
      "description": "Development build with debug info, assertions and validation disabled",
      "inherits": [
        "linux-mingw",
        "base-devel"
      ],
      "cacheVariables": {
        "REN_VULKAN_VALIDATION": "OFF"
      },
      "environment": {
        "VCPKG_PROFILE_MANIFEST_FEATURES": "examples;examples-vulkan;examples-directx12"
      }
    },
    {
      "name": "windows-devel",
      "displayName": "Development Config for Windows",
      "description": "Development build with debug info, assertions and validation",
      "inherits": [
        "windows",
        "base-devel"
      ],
      "cacheVariables": {
        "REN_DIRECTX12_DEBUG": "ON"
      },
      "environment": {
        "VCPKG_PROFILE_MANIFEST_FEATURES": "examples;examples-vulkan;examples-directx12"
      }
    },
    {
      "name": "linux-release",
      "displayName": "Release Config for Linux",
      "description": "Release build with optimizations",
      "inherits": [
        "linux",
        "base-release"
      ]
    },
    {
      "name": "linux-mingw-release",
      "displayName": "Release Config for MinGW on Linux",
      "description": "Release build with optimizations",
      "inherits": [
        "linux-mingw",
        "base-release"
      ]
    },
    {
      "name": "windows-release",
      "displayName": "Release Config for Windows",
      "description": "Release build with optimizations",
      "inherits": [
        "windows",
        "base-release"
      ]
    }
  ]
}
