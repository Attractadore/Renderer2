{
  "version": 3,
  "configurePresets": [
    {
      "name": "devel",
      "displayName": "Development Config",
      "description": "Development build with debug info, assertions and validation",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/devel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "REN_BUILD_EXAMPLES": "ON",
        "REN_DIRECTX12_DEBUG": "ON",
        "REN_LOG_SEVERITY": "ERROR;WARN;INFO;DEBUG",
        "REN_VULKAN_VALIDATION": "ON"
      }
    },
    {
      "name": "mingw-devel",
      "displayName": "Development Config (MinGW)",
      "description": "Development build for MinGW on Linux with debug info and assertions",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/mingw-devel",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "REN_BUILD_EXAMPLES": "ON",
        "REN_LOG_SEVERITY": "ERROR;WARN;INFO;DEBUG"
      }
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "description": "Release build",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
