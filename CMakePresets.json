{
  "version": 3,
  "configurePresets": [
    {
      "name": "devel",
      "displayName": "Development Config",
      "description": "Development build with debug info, assertions and validation",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_COLOR_DIAGNOSTICS": "ON",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "REN_BUILD_EXAMPLES": "ON",
        "REN_DIRECTX12_DEBUG": "ON",
        "REN_LOG_SEVERITY": "ERROR;WARN;INFO;DEBUG",
        "REN_VULKAN_VALIDATION": "ON"
      }
    },
    {
      "name": "linux-mingw-devel",
      "displayName": "Development Config (MinGW on Linux)",
      "description": "Development build for MinGW on Linux with validation disabled",
      "inherits": "devel",
      "cacheVariables": {
        "REN_DIRECTX12_DEBUG": "OFF",
        "REN_VULKAN_VALIDATION": "OFF"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "release",
      "displayName": "Release Config",
      "description": "Release build",
      "binaryDir": "${sourceDir}/build/release",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
