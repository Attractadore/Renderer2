{
  "name": "ren",
  "version": "0.1.0",
  "dependencies": [
    "boost-container",
    "boost-preprocessor",
    "fmt",
    "glm",
    "range-v3"
  ],
  "features": {
    "directx12": {
      "description": "Enable DirectX 12 backend"
    },
    "dummy": {
      "description": ""
    },
    "examples": {
      "description": "Build example executables",
      "dependencies": [
        "sdl2"
      ]
    },
    "examples-directx12": {
      "description": "Build example executables with support for DirectX12 backend",
      "dependencies": [
        {
          "name": "ren",
          "default-features": false,
          "features": [
            "directx12",
            "examples"
          ]
        }
      ]
    },
    "examples-vulkan": {
      "description": "Build example executables with support for Vulkan backend",
      "dependencies": [
        {
          "name": "ren",
          "default-features": false,
          "features": [
            "examples",
            "vulkan"
          ]
        },
        {
          "name": "sdl2",
          "features": [
            "vulkan"
          ]
        }
      ]
    },
    "tests": {
      "description": "Enable tests",
      "dependencies": [
        "gtest"
      ]
    },
    "vulkan": {
      "description": "Enable Vulkan backend",
      "dependencies": [
        "vulkan-headers",
        "vulkan-memory-allocator"
      ]
    }
  }
}
